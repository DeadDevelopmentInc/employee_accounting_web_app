@model EmpAccWebApp.Models.AdminViewModels.DepartmentViewModel
@{
    Layout = "~/Views/Admin/_Layout.cshtml";
    ViewBag.Title = "Edit department";
}

@using (Html.BeginForm("EditDepartment", "Admin", FormMethod.Post, new { @class = "form-inline", role = "form" }))
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        <div class="col-md-10">
            @Html.LabelFor(m => m.Name, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.LabelFor(m => m.HeadFullName, new { @class = "control-label" })
            <input type="text" class="form-control" name="HeadFullName" data-autocomplete-source='@Url.Action("AutocompleteSearchUsers", "Admin")' />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}


@section Scripts{
    <script src='@Url.Content("~/Scripts/jquery-1.12.4.min.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $("[data-autocomplete-source]").each(function () {
                var target = $(this);
                target.autocomplete({ source: target.attr("data-autocomplete-source") });
            });
        });
    </script>

}