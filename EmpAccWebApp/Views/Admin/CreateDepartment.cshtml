@model EmpAccWebApp.Models.AdminViewModels.DepartmentViewModel
@{
    Layout = "~/Views/Admin/_Layout.cshtml";
    ViewBag.Title = "Add Department";
}

@using (Ajax.BeginForm("CreateDepartment", new AjaxOptions()))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <h3>Create new department</h3>
            <div class="col-md-10">
                @Html.LabelFor(model => model.Name, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            </div>
            <div class="col-md-10">
                @Html.LabelFor(m => m.HeadFullName, new { @class = "control-label" })
                <input type="text" class="form-control" name="HeadFullName" data-autocomplete-source='@Url.Action("AutocompleteSearchUsers", "Admin")' />
            </div>
            <div class="form-group"></div>
            <div class="col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts{
    <script src='@Url.Content("~/Scripts/jquery-1.12.4.min.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $("[data-autocomplete-source]").each(function () {
                var target = $(this);
                target.autocomplete({ source: target.attr("data-autocomplete-source") });
            });
        });
    </script>
}