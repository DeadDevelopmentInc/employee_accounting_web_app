@model IEnumerable<EmpAccWebApp.Models.AdminViewModels.DepartmentViewModel>
@{
    Layout = "~/Views/Admin/_Layout.cshtml";
    ViewData["Title"] = "Departments";
}

<p>
    @Html.ActionLink("Create new department", "CreateDepartment", "Admin", null , null)
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.HeadFullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeadFullName)
            </td>
            <td>
                <a> @Html.ActionLink("Edit", "EditDepartment", "Admin", new { id = item.Id }, null)</a>
                <a> @Html.ActionLink("Delete", "DeleteDepartment", "Admin", new { id = item.Id }, null)</a>
            </td>
        </tr>
        }
    </tbody>
</table>
