@model EmpAccWebApp.Models.SkillsModel
@{
    Layout = "~/Views/Manage/_Layout.cshtml";
}

<div class="form-control">
    <h3>Professional skills</h3>
    <div class="row">
        <div class="col-md-4">
            <h4>Programming languages</h4>
            @using (Html.BeginForm("Skills", "Manage", FormMethod.Post, new { role = "form", @class = "form-group" }))
            {
            <div class="form-inline">
                @Html.LabelFor(model => model.C_Sharp, new { })
                @Html.DropDownListFor(model => model.C_Sharp, new SelectList(new string[] { "1", "2", "3", "4", "5" }, Model.C_Sharp), new { id = "C_Sharp" })
            </div>
            <div class="form-inline">
                @Html.LabelFor(model => model.C_or_Cpp, new { })
                @Html.DropDownListFor(model => model.C_or_Cpp, new SelectList(new string[] { "1", "2", "3", "4", "5" }, Model.C_or_Cpp), new { id = "C_or_Cpp" })
            </div>
            <div class="form-inline">
                @Html.LabelFor(model => model.Java, new { })
                @Html.DropDownListFor(model => model.Java, new SelectList(new string[] { "1", "2", "3", "4", "5" }, Model.Java), new { id = "Java" })
            </div>
            <div class="form-inline">
                @Html.LabelFor(model => model.Python, new { })
                @Html.DropDownListFor(model => model.Python, new SelectList(new string[] { "1", "2", "3", "4", "5" }, Model.Python), new { id = "Python" })
            </div>
            <div class="form-inline">
                @Html.LabelFor(model => model.C_Sharp, new { })
                @Html.DropDownListFor(model => model.Ruby, new SelectList(new string[] { "1", "2", "3", "4", "5" }, Model.Ruby), new { id = "Ruby" })
            </div>
            <div class="col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
            }

        </div>

    </div>
</div>

@section Scripts{
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <link rel="stylesheet" href=@Url.Content("~/Scripts/js_bar/dist/themes/fontawesome-stars.css")>
    <script src='@Url.Content("~/Scripts/jquery-1.12.4.min.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/Scripts/js_bar/dist/jquery.barrating.min.js")' type="text/javascript"></script>

    <script type="text/javascript">
        $(function () {
            $('#C_or_Cpp').barrating({
                theme: 'fontawesome-stars'
            });
        });

        $(function () {
            $('#C_Sharp').barrating({
                theme: 'fontawesome-stars'
            });
        });

        $(function () {
            $('#Java').barrating({
                theme: 'fontawesome-stars'
            });
        });

        $(function () {
            $('#Python').barrating({
                theme: 'fontawesome-stars'
            });
        });

        $(function () {
            $('#Ruby').barrating({
                theme: 'fontawesome-stars'
            });
        });
    </script>

}

