@model IndexViewModel
@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Index);
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
<!-- First Name -->
            <div class="form-group">
              <label asp-for="FirtsName"></label>
              <input asp-for="FirtsName" class="form-control" />
              <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
<!-- End First Name -->
<!-- Second Name -->
            <div class="form-group">
              <label asp-for="SecondName"></label>
              <input asp-for="SecondName" class="form-control" />
              <span asp-validation-for="SecondName" class="text-danger"></span>
            </div>
<!-- End Second Name -->
<!-- Username -->
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
<!-- End Username -->
<!-- Position -->
            <div class="form-group">
                <label asp-for="Position"></label>
                <label>New position</label>
                <input asp-for="Position" class="form-control" disabled />
            </div>
<!-- End Position -->
<!-- Place -->
            <div class="form-group">
                <label asp-for="Place"></label>
                <label>New place</label>
                <input asp-for="Place" class="form-control" disabled />
            </div>
<!-- End Place -->
<!-- Email -->
            <div class="form-group">
                <label asp-for="Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Email" class="form-control" />
                    <button asp-action="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                }
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
<!-- End Email -->
<!-- Phone Number -->
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
<!-- End Phone Number -->
            <button type="submit" class="btn btn-default">Uptate Profile</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
