@model IEnumerable<string>
@{
    ViewData["Title"] = "AdminError";
}

<div class="alert alert-danger">
    @switch (Model.Count())
    {
        case 0:
            @: Please retry;
            break;
        case 1:
            @Model.First();
            break;
        default:
            @: Were discovered thr following errors:
            <ul>
                @foreach (string error in Model)
                {
                    <li>@error</li>
                }
            </ul>
            break;
    }
</div>
@Html.ActionLink("Ok", "Index", null, new { @class = "btn btn-default" })

