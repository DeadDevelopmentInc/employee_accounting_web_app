@model IEnumerable<WebAppEmpAcc.Models.Departments.Department>
@{
    Layout = "~/Views/Admin/_Layout.cshtml";
    ViewData["Title"] = "Departments";
}

<p>
    <a asp-action="CreateDepartment">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHead)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeadId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsHead)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeadId)
            </td>
            <td>
                <a asp-action="EditDepartment" asp-route-id="@item.Id">Edit</a>
                <a asp-action="DeleteDepartment" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
