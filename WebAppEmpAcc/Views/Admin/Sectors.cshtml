@model IEnumerable<WebAppEmpAcc.Models.Departments.Sector>

@{
    Layout = "~/Views/Admin/_Layout.cshtml";
    ViewData["Title"] = "Sectors";
}

<p>
    <a asp-action="CreateSector">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHead)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeadId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrnchName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DprtmntName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsHead)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeadId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrnchName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DprtmntName)
            </td>
            <td>
                <a asp-action="EditSector" asp-route-id="@item.Id">Edit</a>
                <a asp-action="DeleteSector" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
